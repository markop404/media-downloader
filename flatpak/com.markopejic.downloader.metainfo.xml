<component type="desktop-application">
  <id>com.markopejic.downloader</id>
  <name>Media Downloader</name>
  <summary>Web video/audio downloader</summary>

  <content_rating type="oars-1.0" />
  <metadata_license>FSFAP</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <developer id="com.markopejic">
    <name>Marko Pejić</name>
  </developer>

  <url type="bugtracker">https://downloader.markopejic.com/report-an-issue</url>
  <url type="contact">https://markopejic.com</url>
  <url type="donation">https://downloader.markopejic.com/donate</url>
  <url type="homepage">https://downloader.markopejic.com</url>
  <url type="vcs-browser">https://downloader.markopejic.com/source-code</url>

  <releases>
    <release version="4.0.0" date="2024-09-24">
      <description>
        <ul>
          <li>Added the ability to work with multiple entirely independent groups of URLs</li>
          <li>Redesigned about window</li>
          <li>The app is now entirely keyboard driven</li>
          <li>Improved user interface</li>
        </ul>
      </description>
    </release>
    <release version="3.6.0" date="2024-08-31">
      <description>
        <ul>
          <li>Fixed progress bar not updating on time during data refresh</li>
          <li>While downloading / refreshing data, the app dynamically disables UI elements that are not supposed to be used during the process</li>
          <li>Fixed some minor bugs</li>
        </ul>
      </description>
    </release>
    <release version="3.5.0" date="2024-08-30">
      <description>
        <ul>
          <li>Reorganized menubar</li>
          <li>Added the ability to create a new instance of the app</li>
        </ul>
      </description>
    </release>
    <release version="3.4.0" date="2024-08-29">
      <description>
        <ul>
          <li>Improved tooltips</li>
          <li>The app now does not delete temporary downloaded files after failed / cancelled download (so downloading can be continued later)</li>
        </ul>
      </description>
    </release>
    <release version="3.3.0" date="2024-08-28">
      <description>
        <ul>
          <li>Added the ability to crop thumbnails / album arts</li>
          <li>Fixed some issues with data refreshing</li>
        </ul>
      </description>
    </release>
    <release version="3.2.0" date="2024-08-18">
      <description>
        <ul>
          <li>Added official support for Linux</li>
          <li>Fixed thumbnails not embedding</li>
        </ul>
      </description>
    </release>
  </releases>

  <branding>
    <color type="primary" scheme_preference="light">#78cdcd</color>
    <color type="primary" scheme_preference="dark">#60a4a4</color>
  </branding>
  
  <description>
    <ul>
        <li>Download from hundreds of websites</li>
        <li>Download mp3 (audio) or mp4 (video)</li>
        <li>Download playlists and whole channels</li>
        <li>Download or embed subtitles</li>
        <li>Embed video chapters, thumbnails and metadata</li>
        <li>Crop thumbnails / album arts to square shape (useful when downloading music)</li>
        <li>Download & work with multiple URLs at once</li>
    </ul>
  </description>
  
  <launchable type="desktop-id">com.markopejic.downloader.desktop</launchable>
  
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/markop404/media-downloader/v4.0.0/screenshots/kde-plasma-light.png</image>
    </screenshot>
  </screenshots>
</component>
