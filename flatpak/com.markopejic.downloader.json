{
    "id": "com.markopejic.downloader",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.PySide.BaseApp",
    "base-version": "6.10",
    "command": "media-downloader",
    "finish-args": [
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--device=dri",
        "--filesystem=xdg-download"
    ],
    "cleanup" : [
        "/man",
        "*.a"
    ],
    "cleanup-commands": [
        "/app/cleanup-BaseApp.sh"
    ],
    "build-options": {
        "env": [
            "BASEAPP_REMOVE_WEBENGINE=1",
            "BASEAPP_DISABLE_NUMPY=1"
        ]
    },
    "modules": [
        "python3-yt-dlp.json",
        {
            "name": "ffmpeg",
            "buildsystem": "simple",
            "build-commands": [
                "mv bin/ffmpeg bin/ffprobe $FLATPAK_DEST/bin/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/yt-dlp/FFmpeg-Builds/releases/download/autobuild-2026-01-11-14-17/ffmpeg-N-122414-g24213d5db3-linux64-gpl.tar.xz",
                    "sha256": "09fc34bd94058116a5159bca0bfbb65637e423770d78e0ab17c854781a46b206",
                    "only-arches": [
                        "x86_64"
                    ]
                },
                {
                    "type": "archive",
                    "url": "https://github.com/yt-dlp/FFmpeg-Builds/releases/download/autobuild-2026-01-11-14-17/ffmpeg-N-122414-g24213d5db3-linuxarm64-gpl.tar.xz",
                    "sha256": "d9f92554b0afd2a8b0de3f719da95be238feb22479a2b541806a0ee2248fde07",
                    "only-arches": [
                        "aarch64"
                    ]
                }
            ]
        },
        {
            "name": "deno",
            "buildsystem": "simple",
            "build-commands": [
                "mv * $FLATPAK_DEST/bin/"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/denoland/deno/releases/download/v2.6.4/deno-x86_64-unknown-linux-gnu.zip",
                    "sha256": "9100bbd0450c17b82002d3948bb8e7e1953c9e6506e63b586e2daa4042eca7f6",
                    "only-arches": [
                        "x86_64"
                    ]
                },
                {
                    "type": "archive",
                    "url": "https://github.com/denoland/deno/releases/download/v2.6.4/deno-aarch64-unknown-linux-gnu.zip",
                    "sha256": "dafb54c5454d7fcca81305215442e832e0c34e90b76a2e9a31d0676cbb06bfc6",
                    "only-arches": [
                        "aarch64"
                    ]
                }
            ]
        },
        {
            "name": "com.markopejic.downloader",
            "buildsystem": "simple",
            "build-commands": [
                "install -D resources/linux/com.markopejic.downloader.desktop $FLATPAK_DEST/share/applications/com.markopejic.downloader.desktop",
                "install -D resources/linux/com.markopejic.downloader.metainfo.xml $FLATPAK_DEST/share/metainfo/com.markopejic.downloader.metainfo.xml",
                "install -D resources/icon.svg $FLATPAK_DEST/share/icons/hicolor/scalable/apps/com.markopejic.downloader.svg",
                "install -D resources/icon.png $FLATPAK_DEST/share/icons/hicolor/512x512/apps/com.markopejic.downloader.png",
                "pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} --compile . --no-build-isolation"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/markop404/media-downloader/",
                    "tag": "v5.0.2"
                }
            ]
        }
    ]
}