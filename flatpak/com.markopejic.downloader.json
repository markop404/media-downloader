{
    "id": "com.markopejic.downloader",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.8",
    "sdk": "org.kde.Sdk",
    "command": "com.markopejic.downloader",
    "finish-args": [
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--device=dri",
        "--filesystem=xdg-download:create"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "ffmpeg",
            "config-opts": [
                "--disable-debug",
                "--disable-doc",
                "--disable-static",
                "--enable-gpl",
                "--enable-shared",
                "--disable-ffplay",
                "--disable-devices",
                "--enable-gnutls",
                "--enable-libmp3lame",
                "--enable-libopus",
                "--enable-libvorbis"
            ],
            "cleanup": [
                "/share/ffmpeg"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ffmpeg.org/releases/ffmpeg-7.0.2.tar.xz",
                    "sha256": "8646515b638a3ad303e23af6a3587734447cb8fc0a0c064ecdb8e95c4fd8b389"
                }
            ]
        },
        {
            "name": "python3-PySide6",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} \"PySide6-Essentials\" --no-build-isolation"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/db/3f/8347353a0980187820f065432870c68e614945b6782f11df41247866b7db/PySide6_Essentials-6.8.0-cp39-abi3-manylinux_2_31_aarch64.whl",
                    "sha256": "ae0732228e93eb882c9a93fd510819fb64b7d09d8e500912b485a604537215d6"
                },
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/9d/fd/17510a0abd503a904ce3b9f1af87385435cf9340fb79c020a53d3a8385a5/PySide6_Essentials-6.8.0-cp39-abi3-manylinux_2_28_x86_64.whl",
                    "sha256": "da99a94806416ec1e386426a474e7d1e514c1cdf8ad171c005376f4f633e7216"
                },
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/a4/b1/2d14977e0d4d415ac0bfbb7e83b303cb48a2dd6e9ba7fcb95f81fdc85b49/shiboken6-6.8.0-cp39-abi3-manylinux_2_31_aarch64.whl",
                    "sha256": "0f62ee7c34337e2c39fff0985694224f7503328c450245c399846b72cd71c410"
                },
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/3b/92/9fa08c01ba811e2405059239e16d21b2e5c40b39de204c88fc35ac01c4ff/shiboken6-6.8.0-cp39-abi3-manylinux_2_28_x86_64.whl",
                    "sha256": "ad88c0e73c9e4de3723c6e6b846e651729433ff9d9086bb2b4e6d49965477d97"
                }
            ]
        },
        {
            "name": "com.markopejic.downloader",
            "buildsystem": "simple",
            "build-commands": [
                "install -D src/flatpak/com.markopejic.downloader.desktop /app/share/applications/com.markopejic.downloader.desktop",
                "install -D src/flatpak/com.markopejic.downloader.metainfo.xml /app/share/metainfo/com.markopejic.downloader.metainfo.xml",
                "install -D src/icons/icon.png /app/share/icons/hicolor/512x512/apps/com.markopejic.downloader.png",
                "install -D src/icons/icon.png /app/icons/icon.png",
                "install -D src/main.py /app/main.py",
                "install -D src/flatpak/runner /app/bin/com.markopejic.downloader",
                "pip3 install --verbose --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} --compile setuptools ./src --no-build-isolation"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/markop404/media-downloader/",
                    "tag": "v4.0.0",
                    "dest": "src"
                },
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/ff/ae/f19306b5a221f6a436d8f2238d5b80925004093fa3edea59835b514d9057/setuptools-75.1.0-py3-none-any.whl",
                    "sha256": "35ab7fd3bcd95e6b7fd704e4a1539513edad446c097797f2985e0e4b960772f2"
                }
            ]
        },
        "python3-yt-dlp.json"
    ]
}